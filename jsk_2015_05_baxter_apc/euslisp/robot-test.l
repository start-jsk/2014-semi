(defun test-pick-object-depth (arm bin)
  ;; insert arm to target bin
  (dolist (av (insert-to-pick-object-avs arm bin))
    (send *irtviewer* :draw-objects)
    (send *ri* :angle-vector av 3000)
    (send *ri* :wait-interpolation))
